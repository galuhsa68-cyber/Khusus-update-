  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "handle_links": "preferred",

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.savekontak",
      "id": "com.savekontak"
    }
  ],

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+kontak",
      "url": "/index.html?kontak=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ]
